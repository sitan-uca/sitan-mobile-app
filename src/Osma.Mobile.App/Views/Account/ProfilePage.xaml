<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Osma.Mobile.App.Views.Account.ProfilePage"
             xmlns:account="clr-namespace:Osma.Mobile.App.Views.Account;assembly=Osma.Mobile.App"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:fftransformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
             Title="Profile">
    <ContentPage.Content>
        <StackLayout>
            <TableView HasUnevenRows="True">
                <TableSection>
                    <ViewCell Height="250">
                        <Grid>
                            <ffimageloading:CachedImage
                                x:Name="Image"                        
                                Aspect="AspectFit"
                                DownsampleUseDipUnits="true"
                                FadeAnimationEnabled="true"
                                HeightRequest="200"
                                VerticalOptions="Center"
                                Source="{Binding AgentImageSource, TargetNullValue='profile_icon_grey.jpg'}" 
                            >
                                <ffimageloading:CachedImage.Transformations>
                                    <fftransformations:CircleTransformation />
                                </ffimageloading:CachedImage.Transformations>
                            </ffimageloading:CachedImage>
                            <Button 
                                    ImageSource="edit_icon.png"
                                    
                                    WidthRequest="50"
                                    HeightRequest="50"
                                    HorizontalOptions="End"
                                    VerticalOptions="End"
                                    TranslationX="-110"
                                    TranslationY="-30"
                                    CornerRadius="40"
                                    
                                    Command="{Binding EditProfileImage}"
                                    
                                    BackgroundColor="#00D974" />
                        </Grid>
                    </ViewCell>
                </TableSection>
                <TableSection>
                    <TextCell Text="Agent Name" 
                              TextColor="#000" Detail="{Binding AgentName}" Command="{Binding EditNameCommand}"/>
